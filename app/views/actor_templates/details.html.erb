<h1>
  Actor #<%= @this_actor.id %> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @this_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @this_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @this_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/ <%= @this_actor.image %>?set=set3" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@this_actor.created_at) %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@this_actor.updated_at) %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

  <% @repertoire.each do |this_character| %>
    <tr>
      <% this_movie = Movie.where({ :id => this_character.movie_id }).at(0)  %>
      <td>
        <%= this_movie.title %>
      </td>

      <td>
        <%= this_movie.year %>
      </td>

      <td>
        <% dir = Director.where({ :id => this_movie.director_id }).at(0) %>
        <%= dir.name %>
      </td>

      <td>
        <%= this_character.name %>
      </td>

      <td>
        <a href="/movies/<%= this_movie.id %>"> Show details </a>
      </td>
    </tr>
  <% end %>
</table>
